<resources>

    <style name="Base.V27.Theme.DynamicColors" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.DynamicColors" parent="Base.V27.Theme.DynamicColors"/>

    <style name="Base.V27.Theme.DynamicColors.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.DynamicColors</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.DynamicColors.SplashScreen" parent="Base.V27.Theme.DynamicColors.SplashScreen" />
